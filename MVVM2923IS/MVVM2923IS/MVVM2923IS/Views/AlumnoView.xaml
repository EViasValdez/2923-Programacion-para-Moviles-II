<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM2923IS.Views.AlumnoView">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Escribe el ID"
                   Text="{Binding ID}"/>
            <Entry Placeholder="Escribe el Nombre"
                   Text="{Binding Nombre}"/>
            <Button Text="Insertar" Command="{Binding InsertarCommand}"/>
            <Label Text="{Binding ID}" />
            <Label Text="{Binding Nombre}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>