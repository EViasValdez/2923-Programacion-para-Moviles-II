<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaSQL.MainPage">

    <ScrollView>
        <StackLayout>
            <Label Text="Nombre" />
            <Entry x:Name="ENombre" Placeholder="" />
            <Label Text="Apellidos" />
            <Entry x:Name="EApellidos" Placeholder="" />
            <Label Text="Matricula" />
            <Entry x:Name="EMatricula" Placeholder="" />
            <Label Text="Codigo" />
            <Entry x:Name="ECodigo" Placeholder="" />
            <Button x:Name="BInsertar" Text="Insertar" Clicked="BInsertar_Clicked" />
            <Button x:Name="BConsultar" Text="Consultar" Clicked="BConsultar_Clicked" />
            <Label Text="Grupo" />
            <Entry x:Name="EGrupo" Placeholder="" />
            <Button x:Name="BInsertarGrupo" Text="Insertar grupo" Clicked="BInsertarGrupo_Clicked" />
            <Button x:Name="BConsultarGrupo" Text="Consultar grupo" Clicked="BConsultarGrupo_Clicked" />
        </StackLayout>
   </ScrollView>
</ContentPage>